@font-face
    font-family 'social'
    src url('../fonts/social.eot')
    src url('../fonts/social.eot?#iefix') format('embedded-opentype'), url('../fonts/social.woff') format('woff'), url('../fonts/social.ttf') format('truetype'), url('../fonts/social.svg#social') format('svg')
    font-weight normal
    font-style normal

celeste = #00b9d1
naranjo = #ff942d
rosado = #fa006a
amarillo = #ffd800
calipso = #00aef0
amarillo_oscuro = #f7d000

/*
font-family: 'Lobster', cursive;
font-family: 'Varela Round', sans-serif;
font-family: 'Exo 2', sans-serif;
*/

box_style()
    box-sizing border-box
    display inline-block
    vertical-align top

limitar(ancho)
    margin auto
    max-width ancho

body
    background-color #f5f5f5
    font-family 'Varela Round', sans-serif
    font-size 16px
    margin auto
    max-width 1200px

header
    background naranjo
    border-bottom 5px solid rosado
    padding 0 0 1em
    position relative
    text-align center

    .menu
        background url('../images/barra_fondo.png') repeat-y
        border-radius 0 0 0.4em 0.4em
        box-shadow 0 0 10px #000
        font-family 'Exo 2', sans-serif
        margin auto
        padding 1em 0
        width 60%

        .logo
            box_style()
            cursor pointer

            img
                width 130px

        .menu_opciones
            display none

            figure
                display inline-block
                position relative
                vertical-align top

                img
                    position absolute
                    top -10px
                    width 135pxpx
                    z-index 1

    .menu_navegacion
        li
            display inline-block
            vertical-align top

            a
                background-color white
                padding 0.5em 1em
                text-decoration none

#contenedor_ingreso
    background-color amarillo_oscuro
    background-image url(../images/background_login.png)
    background-size 100% 100%
    margin auto
    width 90%

    section
        margin 1em

    .contenedor
        border-radius 20px
        position relative

        &:after
            content ""
            border-left 15px solid transparent
            border-right 15px solid transparent
            border-top 15px solid white
            position absolute
            top 100%
            left calc(50% - 15px)

        div
            margin 0.5em 0

            input[type="text"],
            input[type="password"]
                border 1px solid #999
                border-radius 5px
                padding 0.5em

            input[type="submit"]
                background celeste
                border 0
                color white
                border-radius 5px
                padding 0.5em 1em
        h2
            color rosado
            font-family 'Lobster', sans-serif

#formulario_registro
#login_facebook
.login_usuario
    border-radius 1em
    box-sizing border-box
    display inline-block
    margin 2em 1em
    padding 1em
    vertical-align top
    width 25%

#formulario_registro
    border 3px solid rosado
    text-align left

    h3
        color rosado
        text-align center

    .fila
        input[type="password"],
        input[type="text"]
            border 1px solid silver
            border-radius 5px

        label
            color #555
            display block
            font-weight bold
            min-width 160px
            text-align left

        p
            font-weight lighter
            color #999999

        select
            width 65px


    input[type="submit"]
        background-color rosado
        border 0
        border-radius 5px
        color white
        padding 0.2em 2em

#login_facebook
    border 3px solid amarillo

    h3
        color amarillo

.login_usuario
    border 3px solid celeste
    text-align left

    input[type="password"],
    input[type="text"]
        border-radius 5px
        width 100%

    input[type="submit"]
        background-color celeste
        border 0
        border-radius 5px
        color white
        display block
        margin 1em auto
        padding 0.5em 1em
        text-align center

    h3
        color celeste

    label
        display block
        margin 0.5em 0

    span
        display block
        a
            color celeste

#seccion_tipo_proyecto
    article
        color white
        padding 2em 1em
        text-align center

    th:last-child
        vertical-align bottom

#slider
    background-color calipso
    background-image url('../images/bg_slider.png')
    background-position left top
    background-size 100%
    background-repeat no-repeat
    min-height 10em
    padding 0.5em

    h2, p
        text-align center

    h2
        color rosado

    .globo_texto
        limitar(500px)
        background white
        border-radius 10px
        padding 1em
        position relative

        &:after
            border-left 15px solid transparent
            border-right 15px solid transparent
            border-top 15px solid white
            content ""
            left 50%
            margin-left -15px
            position absolute
            top 100%

#terminos_condiciones
    border 3px solid rosado
    border-radius 20px
    margin auto
    margin-top 3em
    padding 1em
    width 70%

    h1
        color rosado
        font-size 1.5em
        text-align center

.btn_facebook
    background #1e62a9
    border 1px solid #143f72
    border-bottom-width 2px
    border-radius 5px
    color white
    cursor pointer
    display inline-block
    padding 0.5em 1em

    &:before
        content "\e601"
        font-family 'social'
        position relative
        right 0.5em

    &:hover
        background #366ab2

.buscador
    border-bottom 5px solid pink
    padding 1em
    text-align center

    .caja_busqueda
        border none
        border-radius 5px
        color rosado
        padding 0.5em

.categorias
    padding 0
    text-align center

    h2
        background-color amarillo
        color white
        margin-top 0
        position relative
        text-shadow 3px 2px 1px #555

        &:after
            content ""
            border-bottom 10px solid transparent
            border-left 10px solid white
            border-top 10px solid transparent
            position absolute
            right 0.2em
            top 0.2em

    .proyecto
        padding 0.5em
        border-radius 5px
        margin 0.5em
        width 135px

        figure
            figcaption
                color white
                text-align left

            img
                width 100%

.contenedor
    background-color #f9f9f9
    border-radius 7px
    margin-top 2em
    padding 1em

.error_message
    color #D15538

.fondo_calipso
    background calipso

.fondo_celeste
    background celeste

.fondo_naranjo
    background naranjo

.fondo_rosado
    background rosado

.fondo_punteado
    background url("../images/bg_slider.png")
    background-size 100%

.fondo_rayado
    background url("../images/mainbg.png")
    background-size 100%

.formulario
    margin auto
    width 60%
    .fila
        padding 0.3em

        label
            display inline-block
            min-width 140px

        select
            width 180px

.iblock
    box-sizing border-box
    display inline-block
    vertical-align top

.marco
    background-color white
    border 4px solid rosado
    border-radius 10px
    margin auto
    margin-top 3em
    width 70%

    a
        background-color rosado
        border-radius 5px
        color white
        display inline-block
        margin-top 0.5em
        padding 0.5em 1em
        text-decoration none

    legend
        background-color rosado
        border-radius 0.5em
        color white
        padding 0.5em 3em
        text-align center

    table
        thead
            tr
                border-bottom 2px dashed rosado
                th
                    color rosado
                    figure img
                        width calc(213px / 1.5)

.sombra_caja
    box-shadow 3px 3px 1px #ebebeb

.t_centered
    text-align center

.texto_blanco
    color white

.w44
    width 44%

.w45
    width 45%

.w49
    width 49%

@media screen and (min-width: 768px)
    header
        .menu
            width 90%
            .menu_opciones
                box_style()

                .link_aportar,.link_entrar,.link_evento,.link_registro
                    box_style()
                    text-decoration none
                    padding 0.5em

                .link_aportar, .link_evento
                    border-radius 0.5em
                    color white

                .link_entrar,.link_registro
                    color black

                .link_aportar
                    background-color rosado

                .link_evento
                    background-color calipso
